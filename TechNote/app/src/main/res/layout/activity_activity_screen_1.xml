<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/screen_1_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        app:titleTextColor="@color/white"
        app:popupTheme="@style/AppTheme.NoActionBar"
        app:theme="@style/AppTheme.NoActionBar">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EDIYA MEMBERS"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title"
            android:textStyle="bold"
            android:textSize="20sp"
            />
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:id="@+id/members_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/screen_1_toolbar">
        <TextView
            android:id="@+id/salutation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:textSize="7pt"
            android:text="안녕하세요.">
        </TextView>
        <TextView
            android:id="@+id/members_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="홍길동"
            android:textSize="12pt"
            android:layout_below="@+id/salutation"
            android:layout_marginLeft="30dp">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="님"
            android:textSize="10pt"
            android:layout_toRightOf="@+id/members_name"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/salutation">
        </TextView>
        <ImageView
            android:id="@+id/image_barcode"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@id/members_name"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/barcode">
        </ImageView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_barcode"
            android:layout_below="@id/members_name"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/circle_add_button"
            />
        <TextView
            android:id="@+id/big_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:textColor="@color/white"
            android:layout_toLeftOf="@id/right_number"
            android:textSize="25pt">
        </TextView>
        <TextView
            android:id="@+id/right_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:text=" / 12"
            android:textColor="#B3B3B3"
            android:textSize="11pt">
        </TextView>
        <View
            android:id="@+id/divition_line"
            android:layout_width="135dp"
            android:layout_height="2dp"
            android:layout_below="@+id/big_number"
            android:background="@color/white"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divition_line"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="70dp"
            android:text="COUPON : 8"
            android:textColor="@color/white"
            android:textSize="5pt">
        </TextView>
        <TextView
            android:id="@+id/card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/coupon"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="86dp"
            android:text="CARD : 1"
            android:textColor="@color/white"
            android:textSize="5pt">
        </TextView>
        <TextView
            android:id="@+id/level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="72dp"
            android:text="LEVEL : VIP"
            android:textColor="@color/white"
            android:textSize="5pt">
        </TextView>
    </RelativeLayout>


    <TableLayout
        android:id="@+id/screen_1_tablelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/members_layout"
        android:weightSum="10"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_line_bottom_right_left"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/stamp_image"
                    android:layout_width="55dp"
                    android:layout_height="65dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/stamp"></ImageView>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toEndOf="@+id/stamp_image"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/stamp_text"
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:text="스탬프"
                        android:textColor="@color/black"
                        android:textSize="17dp"></TextView>

                    <TextView
                        android:id="@+id/stamp_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/stamp_text"
                        android:text="7"
                        android:textColor="@color/design_default_color_primary_dark"
                        android:textSize="22dp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/stamp_text"
                        android:layout_toRightOf="@+id/stamp_number"
                        android:text=" / 12"
                        android:textColor="@color/silver"
                        android:textSize="22dp"></TextView>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_line_botom_right"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/image_rating"
                    android:layout_width="55dp"
                    android:layout_height="65dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/rating"></ImageView>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/image_rating">

                    <TextView
                        android:id="@+id/text_myrating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="나의 등급"
                        android:textColor="@color/black"
                        android:textSize="14dp"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_myrating"
                        android:text="VIP"
                        android:textColor="@color/colorAccent"
                        android:textSize="20dp"
                        android:textStyle="bold"></TextView>
                </RelativeLayout>

            </RelativeLayout>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:weightSum="2">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_line_bottom_right_left"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/image_coupon"
                    android:layout_width="55dp"
                    android:layout_height="65dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/coupon">
                </ImageView>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/image_coupon">
                    <TextView
                        android:id="@+id/text_coupon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="쿠폰"
                        android:textColor="@color/black"
                        android:textSize="17dp">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_coupon"
                        android:text="X 8"
                        android:textColor="@color/design_default_color_primary_dark"
                        android:textStyle="bold"
                        android:textSize="22dp">
                    </TextView>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_line_botom_right"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/image_gift"
                    android:layout_width="55dp"
                    android:layout_height="65dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/gift">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_toRightOf="@+id/image_gift"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:text="선물하기">
                </TextView>
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:weightSum="2">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_line_bottom_right_left"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/image_card"
                    android:layout_width="55dp"
                    android:layout_height="65dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/card">
                </ImageView>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/image_card"
                    android:layout_centerInParent="true">
                    <TextView
                        android:id="@+id/text_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이디야카드"
                        android:textColor="@color/black"
                        android:textSize="17dp">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_card"
                        android:text="59,000"
                        android:textColor="@color/design_default_color_primary_dark"
                        android:textStyle="bold"
                        android:textSize="22dp">
                    </TextView>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_line_botom_right"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/image_smart_order"
                    android:layout_width="55dp"
                    android:layout_height="65dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/smart_order">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_toRightOf="@+id/image_smart_order"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:text="스마트 오더">
                </TextView>
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/titleBarcolor">

            <TextView
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="광고"
                android:layout_marginLeft="40dp"
                android:layout_span="2"
                android:textColor="@color/black"
                android:textSize="16dp"></TextView>
        </TableRow>
    </TableLayout>

</RelativeLayout>