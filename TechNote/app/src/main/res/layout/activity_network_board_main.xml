<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/network_board_main_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".network.BoardMain">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_network_board_main"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/border_line_top_bottom">
    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:id="@+id/fragment_container_network_board_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_network_board_main"
        android:layout_above="@+id/bottom_navigation_network_board_main">
    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_network_board_main"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:background="@drawable/border_line_top"
        app:itemBackground="@android:color/white"
        app:itemTextColor="@color/selector_bottom_nav_color_state"
        app:itemIconTint="@color/selector_bottom_nav_color_state"
        app:labelVisibilityMode="labeled"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:menu="@menu/menu_network_board_main_bottom_navigation" />

</RelativeLayout>