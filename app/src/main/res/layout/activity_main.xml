<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:theme="@style/AppTheme.NoActionBar"
            android:id="@+id/main_toolbar"/>
        <Button
            android:id="@+id/Button1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="  1. Layout"
            android:gravity="center_vertical"
            android:layout_marginTop="75dp"
            android:layout_below="@+id/main_toolbar"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/Button2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="  2. Dialog, Activity, Fragment"
            android:gravity="center_vertical"
            android:layout_centerInParent="true"
            android:layout_below="@+id/Button1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textAllCaps="false"
            android:background="@color/white"/>
        <Button
            android:id="@+id/Button3"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="  3. BLE 연결"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/Button2"
            android:textAllCaps="false"
            android:background="@color/white"/>
        <Button
            android:id="@+id/Button4"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="  4. Google Map"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/Button3"
            android:textAllCaps="false"
            android:background="@color/white"/>
        <Button
            android:id="@+id/Button5"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="  5. DataBase"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/Button4"
            android:textAllCaps="false"
            android:background="@color/white"/>
        <Button
            android:id="@+id/Button6"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="  6. MediaRecord/MediaPlay/Camera"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/Button5"
            android:textAllCaps="false"
            android:background="@color/white"/>
        <Button
            android:id="@+id/Button7"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="  7. File"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/Button6"
            android:textAllCaps="false"
            android:background="@color/white"/>
        <Button
            android:id="@+id/Button8"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="  8. 서버연동"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/Button7"
            android:textAllCaps="false"
            android:background="@color/white"/>
        <Button
            android:id="@+id/Button9"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="  9. 외부 Open Library"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/Button8"
            android:background="@color/white"/>

        <Button
            android:id="@+id/button10"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="  10. Jni"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/Button9"
            android:textAllCaps="false"
            android:background="@color/white"/>

        <Button
            android:id="@+id/Button11"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="  11. Thread_Handler"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="25dp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/button10"
            android:textAllCaps="false"
            android:background="@color/white"/>
    </RelativeLayout>
</ScrollView>